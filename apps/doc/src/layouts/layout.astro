---
import '@/styles/global.css';
import { getCollection, render } from 'astro:content';
import { Button } from '@udixio/ui-react';
import { sentenceCase, kebabCase } from 'change-case';

const apis = await getCollection('api');
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <title>Astro</title>
</head>
<body class="dark bg-surface text-on-surface">
<main class="mx-auto flex justify-between">
  <nav class="flex flex-col  p-4 bg-surface-container">
    {apis.filter(api => !Object.keys(api.data[0].tags).includes('parent')).map(({ id }) =>
      <Button client:load variant="filledTonal" href={'/components/' + kebabCase(id)}>
        {sentenceCase(id)}
      </Button>)}
  </nav>
  <div class="max-w-screen-md  p-4 w-full">

    <slot />
  </div>
  <div></div>
</main>

</body>
</html>
